<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.registeredActivity"
    android:background="@drawable/background_color">


    <Button
        android:textColor="#000"
        android:id="@+id/registered_Btn"
        android:layout_width="189dp"
        android:layout_height="50dp"

        android:layout_above="@+id/login_Btn"

        android:layout_alignStart="@+id/login_Btn"
        android:layout_marginBottom="14dp"
        android:background="@drawable/circular"
        android:onClick="registeredBtnClick"
        android:text="註冊"
        android:textSize="30dp" />
    <TextView
        android:textSize="20dp"
        android:id="@+id/name_Txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name_Edt"
        android:layout_alignBottom="@+id/name_Edt"
        android:layout_alignStart="@+id/account_Txv"
        android:text="@string/str_Name_Txv" />

    <EditText
        android:textSize="20dp"
        android:id="@+id/name_Edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/account_Edt"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:hint="@string/str_Name_Btn_Hint"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/account_Txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_Edt"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="18dp"
        android:layout_toStartOf="@+id/textView3"
        android:text="@string/str_Account_Txv"
        android:textSize="20dp" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/password_Txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/account_Txv"
        android:layout_below="@+id/account_Edt"
        android:layout_marginTop="23dp"
        android:text="@string/str_Password_Txv" />

    <EditText
        android:textSize="20dp"
        android:id="@+id/account_Edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/account_Txv"
        android:layout_alignBottom="@+id/account_Txv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:hint="@string/str_Account_Hint"
        android:inputType="textPersonName" />

    <EditText
        android:textSize="20dp"
        android:id="@+id/password_Edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/password_Txv"
        android:layout_alignBottom="@+id/password_Txv"
        android:layout_alignStart="@+id/account_Edt"
        android:ems="10"
        android:hint="@string/str_Password_Hint"
        android:inputType="textPassword" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/phone_Txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name_Txv"
        android:layout_below="@+id/name_Edt"
        android:layout_marginTop="25dp"
        android:text="@string/str_Phone_Txv" />

    <EditText
        android:textSize="20dp"
        android:id="@+id/phone_Edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phone_Txv"
        android:layout_alignBottom="@+id/phone_Txv"
        android:layout_alignStart="@+id/name_Edt"
        android:ems="10"
        android:hint="@string/str_Phone_Hint"
        android:inputType="phone" />

    <Button
        android:textColor="#000"
        android:id="@+id/login_Btn"
        android:layout_width="189dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"


        android:layout_centerHorizontal="true"

        android:layout_marginBottom="38dp"
        android:background="@drawable/circular"

        android:onClick="loginBtnOnClick"
        android:text="回到登入"
        android:textSize="30dp" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/confirmPassword_Txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password_Txv"
        android:layout_below="@+id/password_Edt"
        android:layout_marginTop="22dp"
        android:text="@string/str_ConfirmPassword_Txv" />

    <EditText
        android:textSize="20dp"
        android:id="@+id/confirmPassword_Edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/confirmPassword_Txv"
        android:layout_alignBottom="@+id/confirmPassword_Txv"
        android:layout_alignStart="@+id/password_Edt"
        android:ems="10"
        android:hint="@string/str_ConfirmPassword_Hint"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/registered_Btn"
        android:text=""
        android:textSize="20dp" />



    <TextView
        android:textSize="20dp"
        android:id="@+id/address_Txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/confirmPassword_Txv"
        android:layout_below="@+id/confirmPassword_Edt"
        android:layout_marginTop="13dp"
        android:text="@string/str_address_Txv" />

    <EditText
        android:textSize="20dp"
        android:id="@+id/address_Edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/confirmPassword_Edt"
        android:layout_alignTop="@+id/address_Txv"
        android:ems="10"
        android:hint="請輸入地址"
        android:inputType="textPersonName" />

</RelativeLayout>
