<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.voiceFragment"
    android:background="@drawable/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/blueToothBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="藍芽設定"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/voice_Btn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/mybutton" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/translationed_Txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="按下按鈕,對我說話"
                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <Button
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:textColor="#f2746b"
                android:background="@drawable/circular"
                android:id="@+id/setting_Btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="語意設定"
                android:textSize="35dp" />


        </LinearLayout>

        <Button
            android:visibility="gone"
            android:textColor="#f2746b"
            android:shadowColor="#000"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:background="@drawable/button_border"
            android:id="@+id/show_Start_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_Login_Btn"
            android:layout_marginLeft="40dp"
            android:textSize="20dp" />


    </LinearLayout>


